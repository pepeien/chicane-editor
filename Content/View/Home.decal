#viewport {
    position: absolute;
    width: 82vw;
    height: 80vh;
}

#sideBar {
    position: absolute;
    width: 18vw;
    height: 100%;
    margin-left: auto;
    background-color: #333333;
}

#sidebarTitle {
    margin-top: 1vh;
    margin-left: 42%;
}

#sidebarContent {
    width: 98.5%;
    height: 99.5%;
    margin: 1.5vh 0 0 0.6vh;
    background-color: #525252;
}

#bottomBar {
    width: 82vw;
    height: 25vh;
    margin-top: auto;
    background-color: #333333;
}

#bottomBarTitle {
    margin: 1vh 0 0 0.25vw;
}

#dirHistory {
    width: 100%;
    height: 18%;
    margin: 1vh 0 0 0.25vw;
    background-color: #525252;
}

#dirContent {
    width: 100%;
    height: 97%;
    margin: 1vh 0 0 0.25vw;
    background-color: #525252;
}